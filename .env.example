# =====================================================
# Papercraft Asset Pack Website - Environment Variables
# =====================================================
#
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# IMPORTANT: Never commit your .env file to version control!
#
# All client-side variables MUST be prefixed with VITE_
# These will be exposed to the browser and embedded in the build.
# =====================================================


# =====================================================
# DEVELOPMENT SERVER
# =====================================================

# Port for the Vite dev server (default: 5173)
# VITE_PORT=5173

# Enable development features (set to "true" in development)
# VITE_DEV_MODE=true


# =====================================================
# PAYMENTS (Stripe)
# =====================================================

# Stripe publishable key (safe to expose to browser)
# Get from: https://dashboard.stripe.com/apikeys
# VITE_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxx

# Stripe price ID for the full asset pack
# VITE_STRIPE_PRICE_ID=price_xxxxxxxxxxxx


# =====================================================
# ANALYTICS (Optional)
# =====================================================

# Google Analytics 4 Measurement ID
# VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Plausible Analytics domain
# VITE_PLAUSIBLE_DOMAIN=yoursite.com


# =====================================================
# FEATURE FLAGS
# =====================================================

# Enable dark mode toggle
# VITE_ENABLE_DARK_MODE=false

# Enable the component library dev view
# VITE_ENABLE_COMPONENT_LIBRARY=true

# Show pricing page
# VITE_ENABLE_PRICING=true

# Enable cart functionality on preview page
# VITE_ENABLE_CART=true


# =====================================================
# API ENDPOINTS (if using backend)
# =====================================================

# Base URL for API requests
# VITE_API_BASE_URL=https://api.yoursite.com

# Asset CDN URL (for loading actual vector files)
# VITE_CDN_URL=https://cdn.yoursite.com


# =====================================================
# NOTES
# =====================================================
#
# Vite Environment Variable Rules:
# 1. Only VITE_ prefixed vars are exposed to browser
# 2. Access in code: import.meta.env.VITE_VARIABLE_NAME
# 3. Vars are string-replaced at build time, not runtime
# 4. Use .env.local for local overrides (auto-ignored by git)
#
# Files loaded (in order of priority):
# - .env                # Loaded in all cases
# - .env.local          # Loaded in all cases, ignored by git
# - .env.[mode]         # Only loaded in specified mode
# - .env.[mode].local   # Only loaded in specified mode, ignored by git
#
# Modes:
# - npm run dev      → mode = "development"
# - npm run build    → mode = "production"
# - npm run preview  → mode = "production"
#
